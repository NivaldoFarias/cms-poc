{
  "$schema": "https://json.schemastore.org/commitlintrc.json",
  "extends": ["@commitlint/config-conventional"],
  "parserPreset": "./.commitlint/parser-preset",
  "rules": {
    "scope-enum": [2, "always", ["client", "server", "packages"]],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "deps"
      ]
    ]
  }
}

{
  "name": "customer-management",
  "version": "1.0.0",
  "description": "Customer Management System PoC",
  "main": "package.json",
  "scripts": {
    "prepare": "npx husky install",
    "start": "concurrently \"cd server && npm start\" \"cd client && npm start\"",
    "dev": "concurrently \"cd server && npm run dev\" \"cd client && npm run dev\"",
    "lint": "concurrently \"cd server && npm run lint\" \"cd client && npm run lint\"",
    "build": "concurrently \"cd server && npm run build\" \"cd client && npm run build\"",
    "format": "concurrently \"cd server && npm run format\" \"cd client && npm run format\"",
    "docker:up": "docker-compose -f ./docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f ./docker/docker-compose.yml down",
    "docker:up:dev": "docker-compose -f ./docker/docker-compose.dev.yml up -d",
    "docker:down:dev": "docker-compose -f ./docker/docker-compose.dev.yml down",
    "test": "concurrently \"cd server && npm test\" \"cd client && npm test\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NivaldoFarias/customer-management-poc.git"
  },
  "keywords": [
    "full-stack",
    "next.js",
    "react",
    "node.js",
    "express",
    "mongodb",
    "docker"
  ],
  "author": "Nivaldo Farias",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NivaldoFarias/customer-management-poc/issues"
  },
  "homepage": "https://github.com/NivaldoFarias/customer-management-poc#readme",
  "dependencies": {
    "concurrently": "^7.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.27.0",
    "eslint-config-next": "^13.0.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.14.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

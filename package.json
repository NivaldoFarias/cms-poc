{
	"name": "content-management-system",
	"version": "1.2.4",
	"description": "Content Management System PoC",
	"homepage": "https://github.com/NivaldoFarias/content-management-system#readme",
	"author": "Nivaldo Farias",
	"license": "MIT",
	"workspaces": [
		"packages/eslint-config",
		"packages/tsconfig",
		"apps/client",
		"apps/server"
	],
	"scripts": {
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"build": "turbo run build",
		"start": "turbo run start",
		"format": "turbo run format",
		"turbo": "turbo run format lint build",
		"docker:up": "docker-compose -f ./docker/docker-compose.yml up -d",
		"docker:down": "docker-compose -f ./docker/docker-compose.yml down",
		"docker:up:dev": "docker-compose -f ./docker/docker-compose.dev.yml up -d",
		"docker:down:dev": "docker-compose -f ./docker/docker-compose.dev.yml down"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"concurrently": "^7.6.0",
		"eslint-config-turbo": "^0.0.4",
		"prettier": "^2.7.1",
		"stylelint": "^14.14.1",
		"stylelint-config-prettier": "^9.0.4",
		"stylelint-config-prettier-scss": "latest",
		"stylelint-config-standard-scss": "^6.1.0",
		"stylelint-scss": "^4.3.0",
		"turbo": "^1.6.3",
		"@cms/eslint-config": "*",
		"@cms/tsconfig": "*"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/NivaldoFarias/content-management-system.git"

{
  "name": "customer-management-system",
  "version": "1.1.1",
  "description": "Customer Management System PoC",
  "main": "package.json",
  "workspaces": [
    "packages/eslint-config-custom",
    "packages/tsconfig-custom",
    "apps/client",
    "apps/server"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "test": "turbo run test",
    "build": "turbo run build",
    "start": "concurrently \"cd server && npm start\" \"cd client && npm start\"",
    "format": "concurrently \"cd server && npm run format\" \"cd client && npm run format\"",
    "docker:up": "docker-compose -f ./docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f ./docker/docker-compose.yml down",
    "docker:up:dev": "docker-compose -f ./docker/docker-compose.dev.yml up -d",
    "docker:down:dev": "docker-compose -f ./docker/docker-compose.dev.yml down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NivaldoFarias/customer-management-poc.git"
  },
  "keywords": [
    "full-stack",
    "next.js",
    "react",
    "node.js",
    "express",
    "mongodb",
    "docker",
    "monorepo",
    "typescript",
    "turborepo",
    "turbo"
  ],
  "author": "Nivaldo Farias",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NivaldoFarias/customer-management-poc/issues"
  },
  "homepage": "https://github.com/NivaldoFarias/customer-management-poc#readme",
  "devDependencies": {
    "commitizen": "^4.2.5",
    "concurrently": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-custom": "*",
    "eslint-config-turbo": "^0.0.4",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.14.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-prettier-scss": "latest",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.3.0",
    "turbo": "^1.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

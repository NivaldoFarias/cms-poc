		"mongodb",
		"docker",
		"monorepo",
		"typescript",
		"turborepo",
		"turbo"
	],
	"bugs": {
		"url": "https://github.com/NivaldoFarias/content-management-system/issues"
	},
	"publishConfig": {
		"access": "public"
	}

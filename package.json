{
  "name": "content-management-system",
  "version": "1.2.3",
  "description": "Content Management System PoC",
  "homepage": "https://github.com/NivaldoFarias/content-management-system#readme",
  "author": "Nivaldo Farias",
  "license": "MIT",
  "workspaces": [
    "packages/eslint-config-custom",
    "packages/tsconfig-custom",
    "apps/client",
    "apps/server"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "test": "turbo run test",
    "build": "turbo run build",
    "start": "turbo run start",
    "format": "turbo run format",
    "turbo": "turbo run format lint build",
    "docker:up": "docker-compose -f ./docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f ./docker/docker-compose.yml down",
    "docker:up:dev": "docker-compose -f ./docker/docker-compose.dev.yml up -d",
    "docker:down:dev": "docker-compose -f ./docker/docker-compose.dev.yml down"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "concurrently": "^7.6.0",
    "eslint-config-custom": "*",
    "eslint-config-turbo": "^0.0.4",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.14.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-prettier-scss": "latest",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.3.0",
    "turbo": "^1.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NivaldoFarias/content-management-system.git"
  },
  "engines": {
    "node": ">=19.0.0",
    "yarn": ">=1.22.19"
  },
  "os": [
    "linux"
  ],
  "keywords": [
    "full-stack",
    "next.js",
    "react",
    "node.js",
    "express",
    "mongodb",
    "docker",
    "monorepo",
    "typescript",
    "turborepo",
    "turbo"
  ],
  "bugs": {
    "url": "https://github.com/NivaldoFarias/content-management-system/issues"
  },
  "publishConfig": {
    "access": "public"
  }
